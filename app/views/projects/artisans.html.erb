
<div class='container-fluid custom-container'>
  <div class="row justify-content-center mb-5">
    <div><h3 class="count-progression text-center">3/3</h3></div>
    <div class="barre-progression progress bg-warning">
      <div data-formtoggle-target="progress" class="progress-bar bg-warning" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    </div>


    <div class="artisans-list col-12 col-lg-6">
      <h2 style='text-align: center; margin:30px;'><strong>Veuillez sélectionner des artisans pour votre projet</strong></h2>
      <div class="cards">
        <% @artisans.each do |artisan| %>
          <%= render partial: 'artisan_card', locals: { artisan: artisan, project: @project } %>
        <% end %>
      </div>
    </div>
    <div class="project-selection col-12 col-lg-4">
      <h2 style='text-align: left; margin:30px'><strong><%= @project.title %></strong></h1>
          <%= cl_image_tag @project.photo.key, height: 200, width: 300, crop: :fill, class: "image-user" %>
      <div class="project-composition">
        <ul>
          <li><%= @project.description %></li>
          <li><%= @project.location %></li>
        </ul>
        <br>
        <br>
        <h5><strong><%= "Votre sélection des artisans :" %></strong></h5>
          <% @project.project_requests.each do |project_request| %>
            <li><strong><%= project_request.user.company_name %></strong></li>
          <% end %>
        </ul>
      </div>
      <div class="button-confirmation">
        <%= link_to "Confirmez mon projet", project_path(@project), class: "btn-main" %>
      </div>
    </div>
  </div>
</div>

<% @artisans.each do |artisan| %>
  <%= render partial: 'modal_artisan', locals: { artisan: artisan, project: @project } %>
<% end %>
