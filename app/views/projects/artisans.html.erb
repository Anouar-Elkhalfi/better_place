

<div class='container'>
  <div class="row justify-content-center" style="margin-top: 30px;">
    <div class="col-12 col-lg-8 mb-lg-0" style='background-color: white; padding-right: 5px'>
    <h2 style='color: black; text-align: center; margin:30px'>Veuillez selectionner des artisans pour votre projet</h2>
      <div class="cards" >
        <% @artisans.each do |artisan| %>
          <%= render partial: 'artisan_card', locals: { artisan: artisan, project: @project } %>
        <% end %>
      </div>
    </div>
    <div class="col-12 col-lg-4" style='background-color: white'>
      <h1 style="margin:30px"><strong><%= @project.title %></strong></h1>
      <p><%= @project.description %></p>
      <p><%= @project.location %></p>
    </div>
  </div>
</div>
