<div class='container-fluid custom-container'>
  <div class="d-flex flex-lg-row flex-column" style="margin-top: 30px;">
    <div class="progress" style="margin-bottom:10px">
      <div data-formtoggle-target="progress" class="progress-bar bg-warning" role="progressbar" style="width: 100%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <div class="artisans-list col-12 col-lg-8 mb-lg-0">
      <h2 style='color: black; text-align: center; margin:30px'>Veuillez s√©lectionner des artisans pour votre projet</h2>
      <div class="cards">
        <% @artisans.each do |artisan| %>
          <%= render partial: 'artisan_card', locals: { artisan: artisan, project: @project } %>
        <% end %>
      </div>
    </div>

    <div class="project-selection col-12 col-lg-4">
      <div class="project-composition">
        <h1 style="margin:30px; color: black"><strong><%= @project.title %></strong></h1>
        <p><%= @project.description %></p>
        <p><%= @project.location %></p>
      </div>

      <%# <div class="project-items">
      </div> %>
      
      <div class="button-confirmation">
        <%= link_to "Confirmez mon projet", project_path(@project), class: "btn-main" %>
      </div>
    </div>
  </div>
</div>
