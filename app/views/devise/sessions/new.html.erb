<div class="container-fluid" style="padding-top: 50px; padding-bottom: 50px;">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">

      <div class="card" style="background-color: white; border-radius: 15px; overflow: visible;">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Log in</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
            <div class="form-group">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control", placeholder: "Email address", style: "border-radius: 15px;" } %>
            </div>
            <div class="form-group">
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: "form-control", placeholder: "Password", style: "border-radius: 15px;" } %>
            </div>
            <div class="form-group">
              <%= f.input :remember_me, as: :boolean,
                          label: "Remember me",
                          input_html: { style: "margin-left: 10px;" } if devise_mapping.rememberable? %>
            </div>

            <%= f.button :submit, "Log in", class: "btn btn-primary btn-block mt-4", style: "border-radius: 15px;" %>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>

    </div>
  </div>
</div>
